{
  "include": ["src"],
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true, // esModuleInterop は strict: true に含まれるため、厳密には不要ですが残しても問題ありません
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "sourceMap": true,
    "target": "ES2022"
  }
}
